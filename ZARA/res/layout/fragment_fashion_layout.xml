<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/fashionFrag_include"
        layout="@layout/header_text_title" />

    <!-- line -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED" />

    <RadioGroup
        android:id="@+id/fashionFrag_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/fashionFrag_rbtn_printflower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/fashion_rb_printflower_selector"
            android:gravity="center"
            android:text="夏日/印花"
            android:textColor="@drawable/navigation_rb_text_selector" />

        <RadioButton
            android:id="@+id/fashionFrag_rbtn_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/fashion_rb_white_selector"
            android:gravity="center"
            android:text="白色"
            android:textColor="@drawable/navigation_rb_text_selector" />

        <RadioButton
            android:id="@+id/fashionFrag_rbtn_danling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/fashion_rb_danling_selector"
            android:gravity="center"
            android:text="丹宁"
            android:textColor="@drawable/navigation_rb_text_selector" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/fashionFrag_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>