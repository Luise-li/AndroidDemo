<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="230dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_detailfrag_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/item_detailfrag_lianyiqun" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5E5E5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_detailfrag_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文理针织裙" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart_money" />

            <TextView
                android:id="@+id/item_detailfrag_tv_discountprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart_money" />

            <TextView
                android:id="@+id/item_detailfrag_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>